{% extends 'base.html.twig' %}
{% block title %}Créer un compte{% endblock %}
{% block body %}
    <div class="card">
        <h2>Inscription</h2>
        {% if errors is defined and errors %}
            <ul>
                {% for e in errors %}
                    <li style="color:#fca5a5;">{{ e }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        <form method="post" action="{{ path('app_register') }}">
            <p>
                <label>Email<br>
                    <input type="email" name="email" value="{{ last_email|default('') }}" required>
                </label>
            </p>
            <p>
                <label>Mot de passe<br>
                    <input type="password" name="password" required minlength="6">
                </label>
            </p>
            <p><button type="submit">Créer le compte</button></p>
        </form>
        <p class="muted"><a href="{{ path('app_login') }}">← J’ai déjà un compte</a></p>
    </div>
{% endblock %}
