{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block body %}
    <div class="card">
        <h2>Connexion</h2>
        {% if error %}
            <p style="color:#fca5a5;">{{ error|trans({}, 'security') }}</p>
        {% endif %}
        <form method="post" action="{{ path('app_login') }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <p>
                <label>Email<br>
                    <input type="email" name="_username" value="{{ last_username|default('') }}" required autofocus>
                </label>
            </p>
            <p>
                <label>Mot de passe<br>
                    <input type="password" name="_password" required>
                </label>
            </p>
            <p><button type="submit">Se connecter</button></p>
        </form>
        <p class="muted">Pas de compte ? <a href="{{ path('app_register') }}">Cr√©er un compte</a></p>
    </div>
{% endblock %}
